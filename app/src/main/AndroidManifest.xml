<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
        Limit READ_EXTERNAL_STORAGE to Android 12 (SDK 32) and lower.
        On Android 13+ (SDK 33+), we rely on the source app (File Manager/OneDrive)
        granting us URI permissions via the Intent.
    -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitsViewer"
        android:largeHeap="true"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FitsViewer"
            tools:ignore="RedundantLabel">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- FILTER 1: MIME Types Only -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="image/fits" />
                <data android:mimeType="application/fits" />
                <data android:mimeType="application/octet-stream" />
                <data android:mimeType="*/*" />
            </intent-filter>

            <!-- FILTER 2: File Scheme Extension Matching -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:host="*" />
                <!-- .fits extensions -->
                <data android:pathPattern=".*\\.fits" />
                <data android:pathPattern=".*\\.FITS" />
                <data android:pathPattern=".*\\..*\\.fits" />
                <data android:pathPattern=".*\\..*\\.FITS" />
                <!-- .fit extensions -->
                <data android:pathPattern=".*\\.fit" />
                <data android:pathPattern=".*\\.FIT" />
                <data android:pathPattern=".*\\..*\\.fit" />
                <data android:pathPattern=".*\\..*\\.FIT" />
            </intent-filter>

            <!-- FILTER 3: Content Scheme Extension Matching -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content" />
                <data android:host="*" />
                <!-- .fits extensions -->
                <data android:pathPattern=".*\\.fits" />
                <data android:pathPattern=".*\\.FITS" />
                <data android:pathPattern=".*\\..*\\.fits" />
                <data android:pathPattern=".*\\..*\\.FITS" />
                <!-- .fit extensions -->
                <data android:pathPattern=".*\\.fit" />
                <data android:pathPattern=".*\\.FIT" />
                <data android:pathPattern=".*\\..*\\.fit" />
                <data android:pathPattern=".*\\..*\\.FIT" />
            </intent-filter>

            <!-- Share Intent Filter -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>

        </activity>
    </application>
</manifest>